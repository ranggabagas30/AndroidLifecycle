<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".timer.countdown.CountDownTimerActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="20sp"
        android:layout_centerInParent="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTrigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_below="@id/timer"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start\t: 00:00:00"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End\t\t: 00:00:00"
        android:layout_below="@id/tvStartTime"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/durationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration: 00:00:00"
        android:layout_below="@id/tvEndTime"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/durationTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration2 : 00:00:00"
        android:layout_below="@id/durationTime"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvUjianMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnTrigger"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Ujian Belum Dimulai"/>
</RelativeLayout>